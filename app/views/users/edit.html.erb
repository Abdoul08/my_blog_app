<div class="row justify-content-center">
  <div class="col-12 col-sm-8 col-md-6">
    <h2 class="text-center mb-4">Modification de l'utilisateur</h2>
  
  <%= form_with(model: @user, local: true) do |f| %>

    <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h3><%=@user.errors.count%> erreur(s) s'est(se sont) produit(s)</h3>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
      
    <div class="form-group"> 
      <%= f.label :name %>
      <%= f.text_field :name , class: "input form-control" %>
    </div> 

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email , class: "input form-control"%>
    </div> 

    <div class="form-group">
      <%= f.label :password %> 
      <%= f.password_field :password , class: "input form-control"%> 
    </div> 

    <div class="form-group">
      <%= f.label :password_confirmation %> 
      <%= f.password_field :password_confirmation , class: "input form-control"%> 
    </div>

    <div class="form-group">
      <%= f.label :admin %>
      <%= f.check_box :admin %>
    </div> 

      <div class="text-center">
      <%= f.submit "Enregistrer",class: "btn btn-outline-dark" %>
      </div>
      <%= link_to "Retourner",users_path,class:"font-weight-bold"%>
    
  <% end %>
  </div>
</div>

 