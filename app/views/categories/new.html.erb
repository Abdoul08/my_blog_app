<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6">
      <h2 class="text-center mb-4">Enregistrement des cat√©gories</h2>

      <%= form_with(model: @categorie, local: true) do |f| %>
        <% if @categorie.errors.any? %>
          <div class="alert alert-danger">
            <h3><%= @categorie.errors.count %> erreur(s) s'est(se sont) produit(s)</h3>
            <ul>
              <% @categorie.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "input form-control", placeholder: "Nom" %>
        </div>

        <div class="text-center">
          <%= f.submit "Enregistrer", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>
</div>
