<div class="row justify-content-center">
  <div class="col-12 col-sm-6 col-md-8">
    <h2 class="text-center mb-4">Catégories</h2>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Nom</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |categorie| %>
          <tr>
            <td><%= categorie.name %></td>
            <td>
              <% if current_user.admin? %> <!-- Vérifie le propriétaire de l'article -->
                <%= link_to 'Modifier', edit_category_path(categorie), class: "btn btn-outline-primary btn-sm mr-2" %>
                <%= link_to 'Supprimer', categorie, method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "btn btn-outline-danger btn-sm", title: "Supprimer" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
