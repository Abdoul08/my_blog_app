<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 mb-5">
<h2>Modification d'articles</h2> 

 <%= form_with(model: @article, local: true) do |f| %>

  <% if @article.errors.any? %>
  <div class="alert alert-danger">
    <h2> <%= @article.errors.count %> erreur(s) s'est(se sont) produit(s)</h2>
    <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
   
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "input form-control"  %>
  </div>

  <div class="form-group">
  <%= f.label :categorie_id, "CatÃ©gorie" %>
  <%= f.collection_select :categorie_id, Categorie.all , :id, :name, class: "input form-control"  %>
</div>

<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image, class: "input form-control-file" %>
</div>

<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area  :content, class: "input form-control" %>
</div>



<div class="text-center">
  <%= f.submit  class: "btn btn-primary" %>
</div>
<%= link_to "Retourner",articles_path, class:"font-weight-bold"  %>

<% end %>
</div>
</div>
