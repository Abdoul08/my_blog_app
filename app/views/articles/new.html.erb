<div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 mb-5">
            <h2 class="text-center mb-4">Nouvel article</h2>
            <%= form_with(model: @article, local: true) do |f| %>

                <% if @article.errors.any? %>
                <div class="alert alert-danger">
                    <h4><%= pluralize(@article.errors.count, 'erreur') %> se sont produites :</h4>
                    <ul>
                        <% @article.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>

                <div class="form-group">
                    <%= f.label :title, class: "label" %>
                    <%= f.text_field :title, class: "input form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :categorie_id, "CatÃ©gorie", class: "label" %>
                    <%= f.collection_select :categorie_id, Categorie.all, :id, :name, include_blank: true, class: "input form-control" %>
                </div>

                <div class="form-group">
                    <%= f.label :image, class: "label" %>
                    <%= f.file_field :image, class: "input form-control-file" %>
                </div>

                <div class="form-group">
                    <%= f.label :content, class: "label" %>
                    <%= f.text_area :content, class: "input form-control" %>
                </div>

                <div class="text-center">
                    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
                </div>

            <% end %>
    </div>
</div>
